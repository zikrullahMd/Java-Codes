import java.util.*;
import java.math.*;
import java.util.Map.Entry;
class Misc{
	
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int[] a = new int[n];
        for(int i = 0;i<n;i++) {
        	a[i] = in.nextInt();
        }
        int[] pre = new int[n];
        int[] suf = new int[n];
        pre[0] = a[0];
        for(int i = 1;i<n;i++) {
        	int max = Math.max(a[i], pre[i-1]);
        	pre[i] = max;
        }
        suf[n-1] = a[n-1];
        for(int i = n-2;i>=0;i--) {
        	int max = Math.max(a[i], suf[i+1]);
        	suf[i] = max;
        }
        int ans = 0;
        for(int i = 0;i<n;i++) {
        	ans += Math.min(pre[i], suf[i]) *a[i];
        }
        System.out.println(ans);
    }
}