import java.util.*;
import java.util.Map.Entry;
import java.math.*;
import java.awt.*;
public class Misc{
	
	
	public static void main(String[] arga) {
 		Scanner in = new Scanner(System.in);
 		long t = in.nextLong();
 		while(t-->0) {
 			long n = in.nextLong();
 			long len = 0;
 			while(n>0) {
 				n = (n & (n<<1));
 				len++;
 			}
 			System.out.println(len);
 		}
	}
}