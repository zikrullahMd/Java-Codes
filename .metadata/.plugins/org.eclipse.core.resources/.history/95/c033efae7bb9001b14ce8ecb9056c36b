import java.util.*;
import java.math.*;
import java.util.Map.Entry;
public class Misc
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
		int m = in.nextInt();
		int k = in.nextInt();
		int[] a = new int[n];
		for(int i = 0;i<n;i++) {
			a[i] = in.nextInt();
		}
		int[] b = new int[m];
		for(int i = 0;i<m;i++) {
			b[i] = in.nextInt();
		}
		int count = 0;
		int min = Integer.MAX_VALUE;
		for(int i = 0;i<n;i++) {
			for(int j = 0;j<m;j++) {
				if(a[i]-b[j] <= k) {
					count++;
				}
			}
		}
		System.out.println(count);
    }
}





























