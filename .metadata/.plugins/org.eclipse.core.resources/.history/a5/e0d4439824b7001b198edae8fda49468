import java.util.*;
import java.math.*;
import java.util.Map.Entry;
class Misc{
	
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int[] a = new int[n];
        for(int i = 0;i<n;i++) {
        	a[i] = in.nextInt();
        }
        Stack<Integer> st = new Stack<>();
        int[] left = new int[n];
        int l = 0;
        int[] right = new int[n];
        int r = n-1;
        for(int i = 0;i<n;i++) {
        	while(!st.isEmpty() && st.peek() >= a[i]) {
        		st.pop();
        	}
        	if(st.isEmpty()) {
        		left[l++] = -1;
        	}else {
        		left[l++] = st.peek();
        	}
        	st.push(a[i]);
        }
        st.clear();
        for(int i = n-1;i>=0;i--) {
        	while(!st.isEmpty() && st.peek() >= a[i]) {
        		st.pop();
        	}
        	if(st.isEmpty()) {
        		right[r--] = -1;
        	}else {
        		right[r--] = st.peek();
        	}
        	st.push(a[i]);
        }
        int ans = Integer.MAX_VALUE;
        for(int i = 0;i<n;i++) {
        	ans = Math.max(ans,(right[i]-left[i]-1)*a[i]);
        }
        System.out.println(ans);
    }
}