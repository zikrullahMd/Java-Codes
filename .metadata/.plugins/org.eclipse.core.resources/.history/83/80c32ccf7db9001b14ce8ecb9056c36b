import java.util.*;
import java.math.*;
import java.util.Map.Entry;
public class Misc
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        long n = in.nextLong();
		long m = in.nextLong();
		long k = in.nextLong();
		long[] a = new long[(int)n];
		for(long i = 0;i<n;i++) {
			a[(int)i] = in.nextLong();
		}
		long[] b = new long[(int)m];
		for(long i = 0;i<m;i++) {
			b[(int)i] = in.nextLong();
		}
		long count = 0;
		Arrays.sort(a);
		Arrays.sort(b);
		long i = n-1;
		long j = m-1;
		while(i>=0 && j>=0) {
			if(Math.abs(a[(int)i] - b[(int)j]) <= k) {
				count++;
			}
			i--;
			j--;
		}
		System.out.println(count);
    }
}





























